
@model List<ApplicationUser>

@{
    
        ViewData["Title"] = "MemberList";
        Layout = "~/Views/Member/_MemberLayout.cshtml";
    }




<form>
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Üye Listeleri</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="CustomerCreate" class="btn btn-info">Yeni Üye Oluştur</a>
        </div>
    </div>

    <div class="border backgroundWhite">
        <div>
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        UserName
                    </th>
                    <th>
                       PhoneNumber
                    </th>
                    <th>
                        Email
                    </th>
                    <th></th>
                    <th></th>
                </tr>



                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Email)
                        </td>
                        <td>
                            <a asp-action="Index" asp-controller="Cars" style="text-decoration:none;">
                                <img src="~/images/car.png" width="40" /> &nbsp; View Cars
                            </a>
                        </td>
                        <td>
                            <a class="btn btn-primary text-white" asp-action="Edit" asp-route-Id="@item.Id">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-Id="@item.Id">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>


                    </tr>
                }



            </table>
        </div>
    </div>



</form>












