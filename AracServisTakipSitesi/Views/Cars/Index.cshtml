@model IEnumerable<AracServisTakipSitesi.Models.Cars>

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Member/_MemberLayout.cshtml";
}




<div class="row" style="padding-bottom:40px; padding-top:20px;">
    <div class="col-md-3">
        <p>
            <a asp-page="Create" asp-route-userId="@Model.CarAndCustVM.UserObj.Id" class="btn btn-info form-control">
                <i class="fas fa-plus"></i> &nbsp; Add New Car
            </a>
        </p>
    </div>
    <div class="col-md-6 offset-md-3">

    </div>
</div>

@if (Model.Count() == 0)
{
    <p>
        No Car Found! Please add a car...
    </p>
}
else
{
    <table class="table table-striped border">
        <tr class="table-secondary">
            <th>
                @Html.DisplayNameFor(model => model.VIN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marka)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Style)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Yıl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kilometre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Renk)
            </th>
            <th></th>
            <th></th>
        </tr>


        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.VIN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Marka)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Style)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Yıl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kilometre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Renk)
                <td>
                    <a class="btn btn-secondary" asp-action="../Services/History">
                        <i class="fas fa-wrench"></i> &nbsp; Service History
                    </a>
                </td>
                @*@if (User.IsInRole(SD.AdminEndUser))
                            {
                    <td>
                        <a class="btn btn-success" asp-page="../Services/Create" asp-route-carId="@item.Id">
                            <i class="fas fa-plus"></i> &nbsp; New Service
                        </a>
                    </td>
                            }*@
                <td>
                    <div class="btn-group" role="group">
                        <a class="btn btn-primary text-white" asp-action="Edit" asp-route-Id="@item.Id">
                            <i class="fas fa-edit"></i>
                        </a> &nbsp;&nbsp;
                        <a class="btn btn-danger text-white" asp-action="Delete" asp-route-Id="@item.Id">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </div>

                </td>
            </tr>
        }
    </table>
}



