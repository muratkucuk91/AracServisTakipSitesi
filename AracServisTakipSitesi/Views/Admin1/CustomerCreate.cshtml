@model AracServisTakipSitesi.ViewModes.UserViewModel

@{
    ViewData["Title"] = "CustomerCreate";
}

<h1>SignUp</h1>

<h4>UserViewModel</h4>
<h3 class="text-info pt-2 pb-3"> Kayıt olmak için formu doldurunuz</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CustomerCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <div class="row">
                    <div class="col-4">
                        <label asp-for="UserName"> Adı Soyadı</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="UserName" class="form-control" />
                    </div>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-4">
                        <label asp-for="Email"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Email" class="form-control" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-4">
                        <label asp-for="PhoneNumber">Telefon</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="PhoneNumber" class="form-control" />
                    </div>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-4">
                        <label asp-for="Adres"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Adres" class="form-control" />
                    </div>
                    <span asp-validation-for="Adres" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-4">
                        <label asp-for="City">Şehir</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="City" class="form-control" />
                    </div>
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-4">
                        <label asp-for="PostaKodu"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="PostaKodu" class="form-control" />
                    </div>
                    <span asp-validation-for="PostaKodu" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-4">
                        <label asp-for="Password">Şifre Oluştur</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Password" class="form-control" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

            </div>




            <div class="form-group">
                <div class="row">
                    <div class="col-4">
                    </div>
                    <div class="col-8">
                        <button type="submit" class="btn btn-success form-control">Kayıt Ol</button>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

